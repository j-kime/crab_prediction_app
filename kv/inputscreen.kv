#:import utils kivy.utils

<InputScreen>:
    canvas:
        Color: 
            rgb: utils.get_color_from_hex("#39B3F2")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        GridLayout:
            rows: 1
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, 0.1
            Label:
                text: "Crab Age Prediction App"
        ScrollView:
            # Lists all of the metrics that can be measured for predicting the age
            size_hint: 0.9, 0.7
            pos_hint: {"top": 0.9, "center_x": 0.5}
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True
                id: input_field_grid
                Label:
                    text: "Sex:"
                TextInput:
                    hint_text: "input here"
                    id: input_sex
                Label:
                    text: "Length:"
                TextInput:
                    hint_text: "input here"
                    id: input_length
                Label:
                    text: "Diameter:"
                TextInput:
                    hint_text: "input here"
                    id: input_diameter
                Label:
                    text: "Weight:"
                TextInput:
                    hint_text: "input here"
                    id: input_weight
                Label:
                    text: "Shucked Weight:"
                TextInput:
                    hint_text: "input here"
                    id: input_shucked_weight
                Label:
                    text: "Viscera Weight:"
                TextInput:
                    hint_text: "input here"
                    id: input_viscera_weight
                Label:
                    text: "Shell Weight:"
                TextInput:
                    hint_text: "input here"
                    id: input_shell_weight
                Button:
                    text: "Submit"
                    on_release:
                        # puts all of the values into a list to be run through the predict age command
                        some_list = [0, float(input_sex.text), float(input_length.text), float(input_diameter.text), float(input_weight.text), float(input_shucked_weight.text), float(input_viscera_weight.text), float(input_shell_weight.text), 0, 0, 0]
                        app.predict_ages(some_list)